<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NoteFolderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/note_return_lsmain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/returnicon"
            android:layout_marginRight="1dp"/>

        <ImageView
            android:id="@+id/createNote"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/notesicon"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:src="@drawable/trashbinicon"
            android:id="@+id/trashNote"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#333333"
        android:text="note List"
        android:gravity="center"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noteRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>